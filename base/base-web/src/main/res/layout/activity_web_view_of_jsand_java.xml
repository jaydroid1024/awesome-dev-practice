<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        tools:context=".webview.WebViewOfJSAndJavaActivity">
    <LinearLayout
            android:id="@+id/ll_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/btn_java_call_js"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="java call js"
                android:onClick="javaCallJs"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/btn_js_bridge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:onClick="jSBridgeDemo"
                android:text="JSBridge Demo"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/webContainer"
            android:layout_marginTop="20dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>
